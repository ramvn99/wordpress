pipeline {
    agent any

    environment {
        // Define GitHub repository URL
        GIT_REPO = 'https://github.com/ramvn99/wordpress.git'
        BRANCH = 'main' // Branch to pull
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Pulling code from GitHub...'


                // Pull the repository from the specified branch
                git branch: "${BRANCH}",
                    url: "${GIT_REPO}"

                echo 'Repository successfully pulled!'
            }
        }
    }
}
